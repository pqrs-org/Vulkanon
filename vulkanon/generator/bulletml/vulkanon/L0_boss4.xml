<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml>
  <action label="top">
    <repeat>
      <times>60</times>
      <action>
        <actionRef label="fireLine">
          <param>120</param>
        </actionRef>
        <actionRef label="fireLine">
          <param>140</param>
        </actionRef>
        <actionRef label="fireLine">
          <param>160</param>
        </actionRef>
        <actionRef label="fireLine">
          <param>180</param>
        </actionRef>
        <actionRef label="fireLine">
          <param>200</param>
        </actionRef>
        <actionRef label="fireLine">
          <param>220</param>
        </actionRef>
        <actionRef label="fireLine">
          <param>240</param>
        </actionRef>
        <wait>30</wait>
      </action>
    </repeat>
  </action>
  <action label="fireLine">
    <fire>
      <direction type="absolute">$1</direction>
      <speed type="absolute">2</speed>
      <bullet />
    </fire>
    <actionRef label="fireLineHoming">
      <param>$1</param>
      <param>1</param>
    </actionRef>
    <actionRef label="fireLineHoming">
      <param>$1</param>
      <param>2</param>
    </actionRef>
    <actionRef label="fireLineHoming">
      <param>$1</param>
      <param>3</param>
    </actionRef>
    <actionRef label="fireLineHoming">
      <param>$1</param>
      <param>4</param>
    </actionRef>
    <actionRef label="fireLineHoming">
      <param>$1</param>
      <param>5</param>
    </actionRef>
  </action>
  <action label="fireLineHoming">
    <fire>
      <direction type="absolute">$1</direction>
      <speed type="absolute">0.1</speed>
      <bullet>
        <action>
          <wait>$2*2</wait>
          <changeSpeed>
            <speed type="absolute">2</speed>
            <term>1</term>
          </changeSpeed>
          <wait>30</wait>
          <changeDirection>
            <direction type="aim">0</direction>
            <term>1</term>
          </changeDirection>
          <changeSpeed>
            <speed type="absolute">4</speed>
            <term>1</term>
          </changeSpeed>
        </action>
      </bullet>
    </fire>
  </action>
</bulletml>
