<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml>
  <action label="top">
    <changeDirection>
      <direction type="absolute">270</direction>
      <term>1</term>
    </changeDirection>
    <changeSpeed>
      <speed type="absolute">0.5</speed>
      <term>1</term>
    </changeSpeed>
    <wait>30</wait>
    <repeat>
      <times>20</times>
      <action>
        <fire>
          <direction type="aim">0</direction>
          <speed type="absolute">1</speed>
          <bullet />
        </fire>
        <repeat>
          <times>5</times>
          <action>
            <fire>
              <direction type="aim">0</direction>
              <speed type="sequence">0.2</speed>
              <bullet />
            </fire>
            <fire>
              <direction type="aim">2</direction>
              <speed type="sequence">0</speed>
              <bullet />
            </fire>
            <fire>
              <direction type="aim">-2</direction>
              <speed type="sequence">0</speed>
              <bullet />
            </fire>
            <fire>
              <direction type="aim">4</direction>
              <speed type="sequence">0</speed>
              <bullet />
            </fire>
            <fire>
              <direction type="aim">-4</direction>
              <speed type="sequence">0</speed>
              <bullet />
            </fire>
            <fire>
              <direction type="aim">6</direction>
              <speed type="sequence">0</speed>
              <bullet />
            </fire>
            <fire>
              <direction type="aim">-6</direction>
              <speed type="sequence">0</speed>
              <bullet />
            </fire>
            <fire>
              <direction type="aim">8</direction>
              <speed type="sequence">0</speed>
              <bullet />
            </fire>
            <fire>
              <direction type="aim">-8</direction>
              <speed type="sequence">0</speed>
              <bullet />
            </fire>
          </action>
        </repeat>
        <wait>60</wait>
      </action>
    </repeat>
  </action>
</bulletml>
