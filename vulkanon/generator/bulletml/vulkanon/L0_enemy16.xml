<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml>
  <action label="top">
    <repeat>
      <times>90</times>
      <action>
        <fire>
          <direction type="absolute">120</direction>
          <speed type="absolute">2</speed>
          <bullet />
        </fire>
        <repeat>
          <times>5</times>
          <action>
            <fire>
              <direction type="sequence">6</direction>
              <speed type="absolute">2</speed>
              <bullet />
            </fire>
          </action>
        </repeat>
        <fire>
          <direction type="absolute">240</direction>
          <speed type="absolute">2</speed>
          <bullet />
        </fire>
        <repeat>
          <times>5</times>
          <action>
            <fire>
              <direction type="sequence">-6</direction>
              <speed type="absolute">2</speed>
              <bullet />
            </fire>
          </action>
        </repeat>
        <wait>10</wait>
      </action>
    </repeat>
  </action>
</bulletml>
